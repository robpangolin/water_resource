{
    "metadata": {
        "title": "Two reservoirs",
        "description": "A simple problem with two reservoirs.",
        "minimum_version": "0.5"
    },
    "timestepper": {
        "start": "2100-01-01",
        "end": "2200-01-01",
        "timestep": 7
    },
    "nodes": [
        {
            "name": "catchment1",
            "type": "catchment",
            "flow": "flow"
        },
        {
            "name": "catchment2",
            "type": "catchment",
            "flow": "flow"
        },
        {
            "name": "reservoir1",
            "type": "storage",
            "min_volume": 0,
            "max_volume": "Max_vol",
            "initial_volume": 200,
            "initial_volume_pc": 50,
            "cost": -5
        },
        {
            "name": "reservoir2",
            "type": "storage",
            "min_volume": 0,
            "max_volume": 200,
            "initial_volume": 200,
            "cost": -5
        },
        {
            "name": "transfer",
            "type": "link",
            "cost": -500,
            "max_flow": 1.0
        },
        {
            "name": "demand1",
            "type": "output",
            "max_flow": 1.8,
            "cost": -101
        },
        {
            "name": "demand2",
            "type": "output",
            "max_flow": 1.0,
            "cost": -100
        },
        {
            "name": "river1",
            "type": "link"
        },
        {
            "name": "river2",
            "type": "link"
        },
        {
            "name": "compensation1",
            "type": "rivergauge",
            "mrf": 0.6,
            "mrf_cost": -1000
        },
        {
            "name": "compensation2",
            "type": "rivergauge",
            "mrf": 0.6,
            "mrf_cost": -1000
        },
        {
            "name": "terminator",
            "type": "output"
        }

    ],
    "edges": [
        ["catchment1", "reservoir1"],
        ["catchment2", "reservoir2"],
        ["reservoir1", "river1"],
        ["reservoir2", "river2"],
        ["river1", "compensation1"],
        ["river2", "compensation2"],
        ["compensation1", "terminator"],
        ["compensation2", "terminator"],
        ["reservoir2", "transfer"],
        ["transfer", "reservoir1"],
        ["reservoir1", "demand1"],
        ["reservoir2", "demand2"]
    ],
    "parameters": {
        "flow_factor": {
            "name": "flow_factor",
            "type": "constant",
            "value": 0.0864
        },
        "flow_cumecs": {
              "type": "dataframe",
              "url": "https://raw.githubusercontent.com/pywr/pywr/master/examples/data/thames_stochastic_flow.gz",
              "column": "flow",
              "index_col": "Date",
              "parse_dates": true
        },
        "flow": {
            "type": "aggregated",
            "agg_func": "product",
            "parameters": ["flow_cumecs", "flow_factor"]
        },
        "Max_vol": {
            "type": "constant",
            "value": 5,
            "lower_bounds": 0,
            "upper_bounds": 100,
            "is_variable": true
        }
    },
    "recorders": {
        "deficit1": {
            "type": "DeficitFrequencyNode",
            "node": "demand1"
        },
        "deficit2": {
            "type": "DeficitFrequencyNode",
            "node": "demand2"
        },
        "deficit": {
            "type": "aggregated",
            "recorders": ["deficit1", "deficit2"],
            "recorder_agg_func": "sum",
            "is_objective": "minimise"
        },
        "__reservoir_:capex": {
            "type": "MeanParameterRecorder",
            "parameter": "Max_vol",
            "factor": 9982,
            "comment": "annualised cost units [$/hm^3]",
            "is_objective": "minimise"
            }
    }
}
